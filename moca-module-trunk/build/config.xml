<?xml version="1.0" encoding="UTF-8"?>
<!-- <!DOCTYPE module PUBLIC "-//OpenMRS//DTD OpenMRS Config 1.0//EN" "http://resources.openmrs.org/doctype/config-1.0.dtd"> -->

<module configVersion="1.0">
	
	<!-- Basic Module Properties -->
	<id>moca</id>
	<name>Sana Module</name>
	<version>1.1.2</version>
	<package>org.moca</package>
	<author>sanamobile.org</author>
	<description>Sana module for managing the Sana Queue.</description>

	<activator>org.moca.MocaActivator</activator>
	
	<require_version>1.5.0</require_version>
	<require_database_version>1.0.5</require_database_version>
	<require_database_version>1.0.6</require_database_version>
	<require_database_version>1.0.7</require_database_version>
	<require_modules>
        <!--  Any whitespace here seems to cause an error -->
		<require_module version="1.1">org.openmrs.module.flashmediaviewer</require_module>
		<require_module version="1.4.2">org.openmrs.module.restmodule</require_module>
	</require_modules>
	<!-- /Basic Module Properties -->

	<!-- Extensions -->
	
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.moca.extension.AdminList</class>
	</extension>

	<extension>
		<point>org.openmrs.gutter.tools</point>
		<class>org.moca.extension.GutterExtension</class>
	</extension>

	<!-- /Extensions -->
				
				
	<!-- AOP Advice descriptors -->
	<!--  <advice>
		<point>org.openmrs.api.UserService</point>
		<class>org.moca.advice.CountingBeforeAdvice</class>
	</advice>
	
	<advice>
		<point>org.openmrs.api.PatientService</point>
		<class>org.moca.advice.CountingAfterAdvice</class>
	</advice>
	
	<advice>
		<point>org.openmrs.api.ConceptService</point>
		<class>org.moca.advice.PrintingAroundAdvisor</class>
	</advice>
	-->
	<!-- /AOP Advice -->
	
			
	<!-- Required Privileges -->
	<privilege>
		<name>Manage Moca Queue</name>
		<description>Able to Manage (View/Edit) the Moca queue</description>
	</privilege>
	
	<privilege>
		<name>View Moca Queue</name>
		<description>Able to view the Moca queue</description>
	</privilege>
	<!-- /Required Privileges -->
	
	
	<!-- Required Global Properties -->
	<globalProperty>
		<property>moca.mdsUri</property>
		<defaultValue>http://localhost/mds</defaultValue>
		<description>URI of the Sana MDS</description>
	</globalProperty>
	
	<globalProperty>
		<property>moca.thumbnail_size</property>
		<defaultValue>250</defaultValue>
		<description>Default size of thumbnails to make for uploaded images.</description>
	</globalProperty>
	
	<globalProperty>
		<property>moca.notification_server_url</property>
		<defaultValue>http://localhost/mds/notifications/submit/</defaultValue>
		<description>URI of the Sana MDS notification SMS service.</description>
	</globalProperty>
	
	<globalProperty>
		<property>moca.email_notification_server_url</property>
		<defaultValue>http://localhost/mds/notifications/submit/email/</defaultValue>
		<description>URI of the Sana MDS notification email service.</description>
	</globalProperty>
	<globalProperty>
		<property>moca.DefaultDisplayCount</property>
		<defaultValue>7</defaultValue>
		<description>setting the default rows to be displayed in all forms</description>
	</globalProperty>
    <globalProperty>
        <property>moca.maxQueueItemListSize</property>
        <defaultValue>10</defaultValue>
        <description>Sets the maximum number of items returned by a Queue view request.</description>
    </globalProperty>
    <globalProperty>
        <property>moca.allowEncounterConceptCreation</property>
        <defaultValue>false</defaultValue>
        <description>Allows encounter uploads to trigger Concept creation.</description>
    </globalProperty>
	<!-- <globalProperty>
		<property>moca.DefaultDisplayCount1</property>
		<defaultValue>45</defaultValue>
		<description>setting the default rows to be displayed in all forms</description>
	</globalProperty> -->
	<!-- /Required Global Properties -->
	
	
	<!-- Servlets -->
	<!-- Accessed through the url /pageContext()/moduleServlet/<moduleId>/<servlet-name> -->
	
	<servlet>
		<servlet-name>uploadServlet</servlet-name>
		<servlet-class>org.moca.queue.web.servlet.UploadServlet</servlet-class>
	</servlet>
		 
	<servlet>
		<servlet-name>queueServlet</servlet-name>
		<servlet-class>org.moca.queue.web.servlet.QueueServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>formServlet</servlet-name>
		<servlet-class>org.moca.queue.web.servlet.FormServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>saveResponseServlet</servlet-name>
		<servlet-class>org.moca.queue.web.servlet.SaveResponseServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>conceptSearchServlet</servlet-name>
		<servlet-class>org.moca.queue.web.servlet.ConceptSearchServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>permissionsServlet</servlet-name>
		<servlet-class>org.moca.queue.web.servlet.PermissionsServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>lexiconServlet</servlet-name>
		<servlet-class>org.moca.queue.web.servlet.LexiconServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>retakeServlet</servlet-name>
		<servlet-class>org.moca.queue.web.servlet.RetakeServlet</servlet-class>
	</servlet>
	
	<!-- Internationalization -->
	<!-- All message codes should start with moduleId.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<!-- /Internationalization -->
	
	<mappingFiles>
		Moca.hbm.xml
		date_items.hbm.xml
	</mappingFiles>
	
</module>
