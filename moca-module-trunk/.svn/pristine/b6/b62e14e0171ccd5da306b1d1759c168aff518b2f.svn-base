<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
 
    <bean id="mocaUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
				<prop key="/module/@MODULE_ID@/queue.form">queueController</prop>
				<prop key="/module/@MODULE_ID@/queueClosed.form">closedQueueController</prop>
				<prop key="/module/@MODULE_ID@/queueDeferred.form">deferredQueueController</prop>
				<prop key="/module/@MODULE_ID@/encounterViewer.form">encounterFormController</prop>
				<prop key="/module/@MODULE_ID@/lexicon.form">lexiconController</prop>
			</props>
		</property>
	</bean>
	
	<bean id="queueController" class="@MODULE_PACKAGE@.queue.web.controller.QueueController">
		<property name="viewName"><value>/module/@MODULE_ID@/queue</value></property>
	</bean>
	
	<bean id="closedQueueController" class="@MODULE_PACKAGE@.queue.web.controller.ClosedQueueController">
		<property name="viewName"><value>/module/@MODULE_ID@/queueClosed</value></property>
	</bean>
	
	<bean id="deferredQueueController" class="@MODULE_PACKAGE@.queue.web.controller.DeferredQueueController">
		<property name="viewName"><value>/module/@MODULE_ID@/queueDeferred</value></property>
	</bean>
	
	<bean id="encounterFormController" class="@MODULE_PACKAGE@.queue.web.controller.EncounterFormController">
		<property name="commandName"><value>object</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/encounter</value></property>
		<property name="successView"><value>encounter.form</value></property>
	</bean>
	
	<bean id="lexiconController" class="@MODULE_PACKAGE@.queue.web.controller.LexiconController">
		<property name="viewName"><value>/module/@MODULE_ID@/lexicon</value></property>
	</bean>
	
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>@MODULE_PACKAGE@.queue.QueueItemService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="@MODULE_PACKAGE@.queue.impl.QueueItemServiceImpl">
							<property name="queueItemDAO">
								<bean class="@MODULE_PACKAGE@.queue.db.hibernate.HibernateQueueItemDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<bean parent="obsServiceTarget" >
        <property name="handlers">
            <map>
                <entry>
                    <key><value>ThumbnailingImageHandler</value></key>
                    <bean class="org.moca.handler.ThumbnailingImageHandler"/>
                </entry>
            </map>
        </property>
    </bean>

	
</beans>
