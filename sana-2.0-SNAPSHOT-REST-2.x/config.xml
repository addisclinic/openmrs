	<require_version>1.9.0</require_version>
	<require_modules>
		<require_module version="1.0">org.openmrs.module.webservices.rest</require_module>
	</require_modules>
	<!-- /Basic Module Properties -->

	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.sana.queue.extension.html.AdminList</class>
	</extension>

	<extension>
		<point>org.openmrs.gutter.tools</point>
		<class>org.openmrs.module.sana.queue.extension.html.GutterExtension</class>
	</extension>
	<!-- /Extensions -->

