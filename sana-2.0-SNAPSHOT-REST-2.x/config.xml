<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>sana</id>
	<name>Sana Queue Module</name>
	<version>2.0-SNAPSHOT</version>
	<package>org.openmrs.module.sana</package>
	<author>Sana Development</author>
	<description>
			Sana Encounter Queue Module
	</description>

	<activator>org.openmrs.module.sana.SanaModuleActivator</activator>
	
	<!-- <updateURL>https://modules.openmrs.org/modules/download/sana/update.rdf</updateURL> -->
