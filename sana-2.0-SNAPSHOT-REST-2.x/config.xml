	<!-- Servlets -->
	<!-- Accessed through the url /pageContext()/moduleServlet/<moduleId>/<servlet-name> -->


    <servlet>
        <servlet-name>queueServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.servlet.QueueServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>conceptSearchServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.servlet.ConceptSearchServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>lexiconServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.servlet.LexiconServlet</servlet-class>
    </servlet>

	<servlet>
        <servlet-name>encounterServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.servlet.EncounterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>complexObsServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.mediaviewer.web.servlet.ComplexObsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>formServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.servlet.FormServlet</servlet-class>
    </servlet>

    <!-- Version 1.x servlets -->
    <servlet>
        <servlet-name>uploadServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.v1.servlet.UploadServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>uploadToEncounterServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.mediaviewer.web.servlet.UploadToEncounterServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>permissionsServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.v1.servlet.PermissionsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>saveResponseServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.v1.servlet.SaveResponseServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>retakeServlet</servlet-name>
        <servlet-class>org.openmrs.module.sana.queue.web.v1.servlet.RetakeServlet</servlet-class>
    </servlet>
	<!-- Internationalization -->
	<!-- All message codes should start with moduleId.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
    <messages>
        <lang>pt</lang>
        <file>messages_pt.properties</file>
    </messages>
	<!-- /Internationalization -->
	
	<mappingFiles>
